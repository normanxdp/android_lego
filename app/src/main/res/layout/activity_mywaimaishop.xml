<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include"
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_handermywaimaishop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip">

            <ImageView
                android:id="@+id/iv_iamgetouxang"
                android:layout_width="80dip"
                android:layout_height="80dip"

                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/iv_iamgetouxang"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_namemywaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:text="隆江猪脚饭"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_shangjia_namemywaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_namemywaim"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/iv_iamgetouxang"
                    android:text="隆江猪脚饭"
                    android:textSize="20sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
              android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yunsche_jh"
                />

                <TextView
                    android:id="@+id/et_zuidijia"
                    android:layout_width="70dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_namemywaim"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/iv_iamgetouxang"
                    android:hint="编辑起送价"
                    android:paddingLeft="8dip"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/feiyang_jh"
                    android:textSize="12sp" />


            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_yixiadianp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_handermywaimaishop"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/bg"
        android:orientation="horizontal">

        <View
            android:layout_width="50dip"
            android:layout_height="0.5dip"
            android:layout_gravity="center"
            android:background="#666" />

        <TextView
            android:id="@+id/tv_money_myadsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="以下我店铺的商品"
            android:textSize="13sp" />

        <View
            android:layout_width="50dip"
            android:layout_height="0.5dip"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:background="#666" />
    </LinearLayout>

    <ListView
        android:id="@+id/ll_mywaimai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_yixiadianp"
        android:layout_marginBottom="90dip"></ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/split_line"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_shangchan"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
 />

</RelativeLayout>