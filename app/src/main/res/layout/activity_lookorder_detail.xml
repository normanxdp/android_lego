                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="5"
                            android:textColor="@color/TextColorBlack"
                            android:textColorHint="@color/hint_gray"
                            android:textSize="15sp"></TextView>
                        <LinearLayout
