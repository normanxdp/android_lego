                                    android:inputType="text"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:singleLine="true"
                                    android:textColor="@color/TextColorBlack"
                                    android:textColorHint="@color/hint_gray"
                                    android:textSize="15sp" />
                            </LinearLayout>


                            <LinearLayout
