<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/label_order_info"
                android:textColor="@color/black"
                android:textSize="17sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/split_line"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dip"
                android:background="@color/white"
                android:layout_gravity="top|center_horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginTop="1dip"

                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_send" />

                    <EditText
                        android:id="@+id/et_send_address"
                        android:layout_width="wrap_content"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="#FFFFFF"
                        android:hint="@string/hint_fill_send_address"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/TextColorBlack"
                        android:textColorHint="@color/hint_gray"
                        android:textSize="15sp" >
                    </EditText>
                    <ImageView
                        android:id="@+id/btn_switch_address"
                        android:layout_width="30dp"
                        android:layout_height="30dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_switch_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/split_line"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginLeft="10dip"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_receive" />

                    <AutoCompleteTextView
                        android:id="@+id/et_receive_address"
                        android:layout_width="match_parent"
                        android:layout_height="60dip"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:layout_marginTop="5dip"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_fill_receive_address"
                        android:imeOptions="actionDone"
                        android:inputType="text|textAutoComplete"
                        android:completionThreshold="1"
                        android:dropDownVerticalOffset="1.0dip"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/TextColorBlack"
                        android:textColorHint="@color/hint_gray"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/split_line"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"/>

            <android.bigplan.lego.view.GroupGridView
                android:id="@+id/gv_package_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/split_line"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="懒人费用: 30蚊"
                android:textColor="@color/TextColorBlack"
                android:textColorHint="@color/hint_gray"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/split_line"
                android:orientation="horizontal">
            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="20dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_send" />

                        <TextView
                            android:id="@+id/tv_start_address"
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="5dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/TextColorBlack"
                            android:textColorHint="@color/hint_gray"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginLeft="20dip"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_receive" />

                        <TextView
                            android:id="@+id/tv_end_address"
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:layout_marginTop="5dip"
                            android:layout_marginLeft="5dip"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/TextColorBlack"
                            android:textColorHint="@color/hint_gray"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_lookup_map"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_gravity="right|center_vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_lookup_map"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_lookup_map"
                        android:gravity="center_vertical"/>
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/split_line"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/tv_contact_lazy"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="30dip"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/TextColorBlack"
                android:textColorHint="@color/hint_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_contact_showTip"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="30dip"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/TextColorBlack"
                android:textColorHint="@color/hint_gray"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_grab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_button_orange"
                android:text="@string/title_grab_order"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>