<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:orientation="vertical" >


    <include
        layout="@layout/include_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_marginTop="15dp"
android:background="#fff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <EditText
            android:id="@+id/et_name_bianjishouhuodizhi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入昵称"
            android:maxLength="60"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_name_bianjishouhuodizhi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />

        <TextView
            android:id="@+id/tv_changdu_bianjishouhuodizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_name_bianjishouhuodizhi"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:gravity="right"
            android:hint="23"
            android:textColor="#6000"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submi_lookorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_orange"
        android:text="保存"
        android:textColor="@color/white"
        android:layout_marginBottom="20dip"
        android:textSize="16sp" />
</LinearLayout>