<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="1dip">

    <ImageView
        android:id="@+id/iv_imagefd"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="#333"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_imagefd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="2dip"

        android:orientation="vertical"
        android:gravity="center_vertical">



        <TextView
            android:id="@+id/tv_tiltle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="隆江猪脚饭"
            android:textColor="#333"
            android:layout_marginLeft="10dip"
            android:textSize="18dip" />

        <TextView
            android:id="@+id/tv_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:text="真的很好吃"
            android:layout_marginLeft="10dip"
            android:textSize="16dip" />
        <TextView
            android:id="@+id/tv_mum_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:text="月售10份"
            android:layout_marginLeft="10dip"
            android:textSize="16dip" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dip"
            android:text="￥15"
            android:layout_marginLeft="10dip"
            android:textSize="16dip" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_jian"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/js_press" />
        <TextView
            android:id="@+id/et_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="#FFFFFF"
            android:hint="0"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/TextColorBlack"
            android:textColorHint="@color/hint_gray"
            android:textSize="15sp" >
        </TextView>
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/zj_press" />
    </LinearLayout>


    </RelativeLayout>


</LinearLayout>
